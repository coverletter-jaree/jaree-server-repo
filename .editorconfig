# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Java files
[*.java]
indent_size = 4
charset = utf-8

# Gradle files
[*.gradle]
indent_size = 2

# Kotlin files
[*.kt]
indent_size = 4

# YAML files
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# XML files
[*.xml]
indent_size = 2

# Properties files
[*.properties]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false

# Docker files
[Dockerfile]
indent_size = 4

# Shell scripts
[*.sh]
indent_size = 2
end_of_line = lf

# Windows batch files
[*.{cmd,bat}]
end_of_line = crlf

# Git ignore files
[*.gitignore]
indent_size = 2

# Documentation files
[*.{txt,md,rst}]
trim_trailing_whitespace = false
